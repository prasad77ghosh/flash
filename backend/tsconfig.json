{
  "compilerOptions": {
    /* === File Layout === */
    "rootDir": "./src",
    "outDir": "./dist",
    /* === Environment Settings === */
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "ES2022"
    ],
    "types": [
      "node",
      "jest"
    ],
    /* === Output Options === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    /* === Type Checking === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    /* === Compatibility === */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* === Module Behavior === */
    "isolatedModules": false,
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/**/*",
    "src/helper/.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}